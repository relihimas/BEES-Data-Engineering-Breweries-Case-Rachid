# Airflow
AIRFLOW_UID=50000
AIRFLOW_GID=0
# O Airflow usa este nome para o host do banco de dados
POSTGRES_HOST=postgres
# O Airflow usa este nome para o host do banco de metadados
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:airflow@postgres/airflow

# Usu√°rio e Senha para o Airflow Webserver
_PIP_ADDITIONAL_REQUIREMENTS=apache-airflow-providers-postgres
_AIRFLOW_WWW_USER_USERNAME=airflow
_AIRFLOW_WWW_USER_PASSWORD=airflow

# PostgreSQL
POSTGRES_USER=airflow
POSTGRES_PASSWORD=airflow
POSTGRES_DB=airflow
POSTGRES_PORT=5432

# SPARK
ENV PATH="/opt/spark/sbin:/opt/spark/bin:${PATH}"
ENV SPARK_HOME="/opt/spark"
ENV SPARK_MASTER="spark://spark-master:7077"
ENV SPARK_MASTER_HOST spark-master
ENV SPARK_MASTER_PORT 7077
ENV PYSPARK_PYTHON python3